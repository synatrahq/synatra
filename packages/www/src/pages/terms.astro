---
import "../styles/global.css"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import { Content } from "../content/terms-of-service.md"
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Terms of Service for Synatra - Read our legal terms and conditions." />
    <meta property="og:title" content="Terms of Service | Synatra" />
    <meta property="og:description" content="Terms of Service for Synatra - Read our legal terms and conditions." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://synatrahq.com/terms" />
    <link rel="canonical" href="https://synatrahq.com/terms" />
    <meta name="theme-color" content="#111111" />
    <meta name="color-scheme" content="dark" />
    <title>Terms of Service | Synatra</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@600&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Spectral:wght@400;500;600&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen bg-surface-bg antialiased" style="font-family: 'Spectral', Georgia, serif;">
    <main class="mx-auto max-w-2xl px-6">
      <Header />

      <article class="prose prose-invert prose-sm pb-12">
        <Content />
      </article>

      <Footer />
    </main>
  </body>
</html>
