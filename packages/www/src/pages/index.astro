---
import "../styles/global.css"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import Hero from "../components/sections/hero.astro"
import VideoDemo from "../components/sections/video-demo.astro"
import Problem from "../components/sections/problem.astro"
import Demo from "../components/sections/demo.astro"
import ProactiveAI from "../components/sections/proactive-ai.astro"
import OnDemandUI from "../components/sections/on-demand-ui.astro"
import Platform from "../components/sections/platform.astro"
import OpenSource from "../components/sections/open-source.astro"
import CTA from "../components/sections/cta.astro"
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="The workspace where AI agents work alongside you. They run tasks proactively, reach out when needed, and generate the perfect UI on demand." />
    <meta property="og:title" content="Synatra | The AI Workspace" />
    <meta property="og:description" content="Work alongside AI agents like colleagues. They handle tasks in the background, reach out proactively, and ask for your approval when it matters." />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://synatrahq.com/og-image.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="https://synatrahq.com/og-image.png" />
    <meta name="twitter:title" content="Synatra | The AI Workspace" />
    <meta name="twitter:description" content="Work alongside AI agents like colleagues. They handle tasks in the background, reach out proactively, and ask for your approval when it matters." />
    <meta property="og:url" content="https://synatrahq.com" />
    <link rel="canonical" href="https://synatrahq.com" />
    <meta name="theme-color" content="#111111" />
    <meta name="color-scheme" content="dark" />
    <title>Synatra | The AI Workspace</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@600&display=swap" rel="stylesheet" />
    <script is:inline type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "Synatra",
      "image": "https://synatrahq.com/og-image.png",
      "description": "The workspace where AI agents work alongside you. They run tasks proactively, reach out when needed, and generate the perfect UI on demand.",
      "url": "https://synatrahq.com",
      "applicationCategory": "DeveloperApplication",
      "operatingSystem": "Linux, macOS, Windows",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "author": {
        "@type": "Organization",
        "name": "Synatra",
        "url": "https://synatrahq.com"
      },
      "codeRepository": "https://github.com/synatrahq/synatra"
    })} />
  </head>
  <body class="min-h-screen bg-surface-bg text-gray-100 antialiased">
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[60] focus:rounded-full focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-medium focus:text-gray-950">
      Skip to main content
    </a>
    <Header />
    <main id="main">
      <Hero />
      <Problem />
      <VideoDemo />
      <Demo />
      <ProactiveAI />
      <OnDemandUI />
      <Platform />
      <OpenSource />
      <CTA />
    </main>
    <Footer />
  </body>
</html>
