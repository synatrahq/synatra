---
import "../styles/global.css"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"

const plans = [
  {
    name: "Free",
    price: 0,
    description: "For individuals exploring AI automation",
    audience: "Personal projects & evaluation",
    features: ["150 runs/month", "1 user, 2 agents", "All features included"],
  },
  {
    name: "Starter",
    price: 49,
    popular: true,
    description: "For small teams getting started with automation",
    audience: "Startups & small teams (2-5 people)",
    features: ["1,000 runs/month", "$0.08 overage", "5 users, 10 agents", "All features included"],
  },
  {
    name: "Pro",
    price: 149,
    description: "For growing teams with advanced integration needs",
    audience: "Growing teams (6-15 people)",
    features: ["2,500 runs/month", "$0.06 overage", "15 users, 30 agents", "All features included"],
  },
  {
    name: "Business",
    price: 299,
    description: "For large teams requiring enterprise features",
    audience: "Large teams & enterprise (15+ people)",
    features: ["6,000 runs/month", "$0.05 overage", "Unlimited users & agents", "All features included"],
  },
]
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Simple, transparent pricing for AI automation" />
    <meta property="og:title" content="Pricing | Synatra" />
    <meta property="og:description" content="Simple, transparent pricing for AI automation" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://synatrahq.com/og-image.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:site_name" content="Synatra" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="https://synatrahq.com/og-image.png" />
    <meta name="twitter:title" content="Pricing | Synatra" />
    <meta name="twitter:description" content="Simple, transparent pricing for AI automation" />
    <meta property="og:url" content="https://synatrahq.com/pricing" />
    <link rel="canonical" href="https://synatrahq.com/pricing" />
    <meta name="theme-color" content="#111111" />
    <meta name="color-scheme" content="dark" />
    <title>Pricing | Synatra</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@600&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Spectral:wght@400;500;600&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen bg-surface-bg antialiased" style="font-family: 'Spectral', Georgia, serif;">

    <main class="mx-auto max-w-2xl px-6">

      <Header />

      <section class="pb-10 md:pb-12">
        <h1 class="text-3xl md:text-4xl font-medium leading-[1.2] tracking-tight text-text-primary">
          Simple pricing.<br />No surprises.
        </h1>
        <p class="text-text-secondary text-lg md:text-xl leading-relaxed mt-6">
          Start free. Scale when you need to.<br />
          Every plan includes every feature.
        </p>
      </section>

      <section class="pb-12 md:pb-16 border-t border-surface-border-muted pt-10">
        <div class="space-y-8">
          {plans.map((plan) => (
            <article class="group">
              <div class="flex items-baseline justify-between mb-2">
                <h2 class="text-text-primary text-xl font-medium">
                  {plan.name}
                  {plan.popular && <span class="ml-2 text-sm text-text-muted font-normal">Popular</span>}
                </h2>
                <div class="text-text-primary">
                  <span class="text-2xl font-medium">${plan.price}</span>
                  <span class="text-text-muted text-sm">/month</span>
                </div>
              </div>
              <p class="text-text-muted text-base leading-relaxed mb-3">{plan.description}</p>
              <p class="text-text-secondary text-sm mb-3">{plan.audience}</p>
              <ul class="space-y-1">
                {plan.features.map((feature) => (
                  <li class="text-text-muted text-sm">{feature}</li>
                ))}
              </ul>
            </article>
          ))}
        </div>
      </section>

      <section class="py-10 md:py-12 border-t border-surface-border-muted">
        <p class="text-text-secondary text-lg md:text-xl leading-relaxed mb-6">
          Ready to get started?
        </p>
        <a
          href="https://synatrahq.com/login"
          class="inline-flex items-center gap-2 text-text-primary text-sm hover:text-text-secondary transition-colors group"
        >
          <span>Begin</span>
          <span class="transition-transform group-hover:translate-x-1">&rarr;</span>
        </a>
      </section>

      <Footer />

    </main>

  </body>
</html>
