---
import "../styles/global.css"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import { DemoModal } from "../components/demo-modal"
import { AGENT_TEMPLATES } from "@synatra/core/seed/agent-templates"
import type { AgentTemplate } from "@synatra/core/types"

type Template = Omit<AgentTemplate, "id">

const categoryLabels: Record<string, string> = {
  analytics: "Analytics",
  support: "Support",
  devops: "DevOps",
  finance: "Finance",
  workflow: "Workflow",
  compliance: "Compliance",
}

const categoryColors: Record<string, string> = {
  analytics: "bg-indigo-500/10 text-indigo-400",
  support: "bg-blue-500/10 text-blue-400",
  devops: "bg-red-500/10 text-red-400",
  finance: "bg-green-500/10 text-green-400",
  workflow: "bg-amber-500/10 text-amber-400",
  compliance: "bg-purple-500/10 text-purple-400",
}

const hasDemo = (t: Template) => t.demoScenarios.length > 0
const byOrder = (a: Template, b: Template) => a.displayOrder - b.displayOrder
const templates = AGENT_TEMPLATES.filter(hasDemo).sort(byOrder)
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Watch AI agents handle real tasks—support tickets, failed payments, CI pipelines. Not chatbots, coworkers." />
    <meta property="og:title" content="Use Cases | Synatra" />
    <meta property="og:description" content="Watch AI agents handle real tasks—support tickets, failed payments, CI pipelines." />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://synatrahq.com/og-image.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="https://synatrahq.com/og-image.png" />
    <meta name="twitter:title" content="Use Cases | Synatra" />
    <meta name="twitter:description" content="Watch AI agents handle real tasks—support tickets, failed payments, CI pipelines." />
    <meta property="og:url" content="https://synatrahq.com/use-cases" />
    <link rel="canonical" href="https://synatrahq.com/use-cases" />
    <meta name="theme-color" content="#111111" />
    <meta name="color-scheme" content="dark" />
    <title>Use Cases | Synatra</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@600&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen bg-surface-bg text-gray-100 antialiased">
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[60] focus:rounded-full focus:bg-white focus:px-4 focus:py-2 focus:text-sm focus:font-medium focus:text-gray-950">
      Skip to main content
    </a>
    <Header />
    <main id="main" class="pt-14">
      <section class="px-6 py-20">
        <div class="mx-auto max-w-6xl">
          <div class="text-center mb-16">
            <p class="text-xs font-medium text-gray-500 mb-4">See it in action</p>
            <h1 class="text-3xl font-semibold tracking-tight text-white md:text-4xl mb-4">
              Not chatbots—coworkers
            </h1>
            <p class="max-w-2xl mx-auto text-sm text-gray-400">
              Support tickets, failed payments, CI pipelines. Watch agents handle real tasks from start to finish.
            </p>
          </div>

          <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {templates.map((t) => (
              <DemoModal
                client:only="solid-js"
                scenario={t.demoScenarios[0]}
                agent={{ icon: t.icon, iconColor: t.iconColor, name: t.name }}
                description={t.description}
                category={categoryLabels[t.category]}
                categoryColor={categoryColors[t.category]}
              />
            ))}
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
